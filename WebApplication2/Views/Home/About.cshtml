@model WebAppPort.Entities.MainModel.MainAboutModel
@{ ViewData["Title"] = "About Page"; }

<section class="hero-wrap hero-wrap-2" style="background-image: url('/images/bg_1.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-2 bread">About Us</h1>
                <p class="breadcrumbs"><span class="mr-2"><a asp-area="" asp-controller="Home" asp-action="Index">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>About us <i class="ion-ios-arrow-forward"></i></span></p>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section">
    <div class="container">
        @foreach (var item in Model.about)
        {
            <div class="row no-gutters">

                <div class="col-md-5 p-md-5 img img-2" style="background-image: url('data:image/jpeg;base64,@Convert.ToBase64String(item.AboutImageData)')">
                </div>
                <div class="col-md-7 wrap-about pb-md-5 ftco-animate">
                    <div class="heading-section mb-5 pl-md-5">
                        <div class="pl-md-5 ml-md-5">
                            <span class="subheading subheading-with-line"><small class="pr-2 bg-white"></small></span>
                            <h2 class="mb-4">@item.AboutTitle</h2>
                        </div>
                    </div>
                    <div class="pl-md-5 ml-md-5 mb-5">
                        @item.AboutDescription
                    </div>
                </div>
            </div>}
        <div class="row mt-5 pt-4">
            @foreach (var item in Model.aboutdet)
            {
                <div class="col-md-4 ftco-animate">
                    <h3 class="h4">@item.AboutTitle</h3>
                    <p>@item.AboutDescription</p>
                </div>
            }
        </div>
    </div>
</section>

<section class="ftco-section testimony-section bg-light">
    <div class="container">
        <h2 style="font-weight: 700; font-size: 3rem; text-align: center;">Our Teams</h2>
        <div class="row ftco-animate">
            <div class="col-md-12">
                <div class="carousel-testimony owl-carousel">
                    @foreach (var item in Model.TeamDet)
                    {
                        <div class="item">
                            <div class="testimony-wrap p-4 pb-5">

                                <div class="text">
                                    <div class="pl-5">
                                        <p class="name">@item.TeamName</p>
                                        <span class="position">@item.TeamPosition</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }

                </div>
            </div>
        </div>
    </div>
</section>