@model WebAppPort.Entities.MainModel.MainServiceModel
@{ ViewData["Title"] = "Services Page"; }

<section class="hero-wrap hero-wrap-2" style="background-image: url('/images/bg_1.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-2 bread">About Us</h1>
                <p class="breadcrumbs"><span class="mr-2"><a asp-area="" asp-controller="Home" asp-action="Index">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Services<i class="ion-ios-arrow-forward"></i></span></p>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section testimony-section bg-light">
    <div class="container">
        <h2 style="font-weight: 700; font-size: 3rem; text-align: center;">Services</h2>
        <div class="row ftco-animate">
            <div class="col-md-12">
                <div class="carousel-testimony owl-carousel">
                    @foreach (var item in Model.mainService)
                    {
                        <div class="item" style="border: solid !important;">
                            <div class="testimony-wrap p-4 pb-5">
                                <div class="text">
                                    <div class="pl-5">
                                        <p class="name">@item.ServiceTitle</p>
                                        <span class="position">@item.ServiceDescription</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<section class="ftco-section testimony-section bg-light">
    <div class="container">
        <h2 style="font-weight: 700; font-size: 3rem; text-align: center;">Contact Us</h2>
        <div class="item">
            <div class="testimony-wrap p-4 pb-5">
                <div class="text">
                    <div class="pl-5">
                        <p class="name">Take the first step. Property and construction can be difficult; however, we are here to guide you along the process. Please contact us with some details of what you want to achieve and we will get back to you as soon as we can.</p>
                        <div>
                            <button style=" background-color: #04AA6D; /* Green */ border: none; color: white; padding: 15px 32px; text-align: center; text-decoration: none; display: inline-block; font-size: 16px;">
                                <a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>